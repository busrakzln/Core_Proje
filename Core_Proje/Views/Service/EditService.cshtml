@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "EditService";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("EditService", "Service", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description">Hizmet Düzenleme Paneli  </p>
                <form class="forms-sample">
                    <br />
                    @Html.HiddenFor(x => x.ServiceID)
                    <br />
                    @Html.Label("Hizmet Başlığı")
                    @Html.TextAreaFor(x => x.Title, new { @class = "form-control" })
                    <br />
                    <label>Resim Yolu</label>
                    @Html.TextAreaFor(x => x.ImageUrl, new { @class = "form-control" })
                    <br />
                    <button type="submit" class="btn btn-outline-success">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
}




